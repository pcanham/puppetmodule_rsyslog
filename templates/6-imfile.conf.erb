$ModLoad imfile
$InputFileName <%= scope.lookupvar('rsyslog::client::imfile::logfilename') %>
$InputFileTag <%= scope.lookupvar('rsyslog::client::imfile::filetag') %>
$InputFileStateFile <%= scope.lookupvar('rsyslog::client::imfile::statefile') %>
$InputFileSeverity <%= scope.lookupvar('rsyslog::client::imfile::serverity') %>
$InputFileFacility <%= scope.lookupvar('rsyslog::client::imfile::factility') %>
