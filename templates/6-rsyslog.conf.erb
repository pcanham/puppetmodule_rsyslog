# if you experience problems, check
# http://www.rsyslog.com/troubleshoot for assistance

# rsyslog v3: load input modules
# If you do not load inputs, nothing happens!
# You may need to set the module load path if modules are not found.

$ModLoad immark   # provides --MARK-- message capability
$ModLoad imuxsock # provides support for local system logging (e.g. via logger command)
$ModLoad imklog   # kernel logging (formerly provided by rklogd)

# Include all config files in <%= scope.lookupvar('extsyslog_dir') %>/
$IncludeConfig <%= scope.lookupvar('extsyslog_dir') %>/*.conf

<% if scope.lookupvar('server') == true %>
###############################################################################
### Starting remote syslog config                                           ###
###############################################################################
<% if scope.lookupvar('udp_enable') == true %>
## provides UDP syslog reception
$ModLoad imudp
<% end %>
<% if scope.lookupvar('tcp_enable') == true %>
## provides TCP syslog reception
$ModLoad imtcp
<% end %>
# Switch to remote ruleset
$RuleSet remote

$template FileFormat,"%msg:::sp-if-no-1st-sp%%msg%\n"
$template noLogServerLog, "<%= scope.lookupvar('logpath') %>/%HOSTNAME%/%programname%.log"
if $syslogfacility-text == 'local3' then ?noLogServerLog;FileFormat
& ~

$template DynFile, "<%= scope.lookupvar('logpath') %>/%HOSTNAME%/%syslogfacility-text%.log"
$Template DynMessages, "<%= scope.lookupvar('logpath') %>/%HOSTNAME%/messages"
*.info;mail.none;authpriv.none;cron.none            ?DynFile;FileFormat
authpriv.*                                          ?DynFile;FileFormat
mail.*                                              ?DynFile;FileFormat
cron.*                                              ?DynFile;FileFormat
user.*                                              ?DynFile;FileFormat
uucp,news.crit                                      ?DynFile;FileFormat

# Switch back to default ruleset
$RuleSet RSYSLOG_DefaultRuleset

<% if scope.lookupvar('tcp_enable') == true %>
# bind ruleset to tcp listener
$InputTCPServerBindRuleset remote
$InputTCPServerRun <%= scope.lookupvar('tcp_port') %>
<% end %>
<% if scope.lookupvar('udp_enable') == true %>
$InputUDPServerBindRuleset remote
$UDPServerRun <%= scope.lookupvar('udp_port') %>
<% end %>
###############################################################################
### Finishing remote syslog config                                          ###
###############################################################################
<% end %>
$ActionFileDefaultTemplate RSYSLOG_TraditionalFileFormat

# Log all kernel messages to the console.
# Logging much else clutters up the screen.
#kern.*                                                 /dev/console
# Log anything (except mail) of level info or higher.
# Don't log private authentication messages!
*.info;mail.none;authpriv.none;cron.none                -/var/log/messages
# The authpriv file has restricted access.
authpriv.*                                              /var/log/secure
# Log all the mail messages in one place.
mail.*                                                  -/var/log/maillog
# Log cron stuff
cron.*                                                  -/var/log/cron
# Everybody gets emergency messages
*.emerg                                                 :omusrmsg:*
# Save news errors of level crit and higher in a special file.
uucp,news.crit                                          -/var/log/spooler
# Save boot messages also to boot.log
local7.*                                                /var/log/boot.log
<% if scope.lookupvar('client') == true %>
<% if scope.lookupvar('udp_enable') == true %>
*.* @<%= scope.lookupvar('syslogserver') %>:<%= scope.lookupvar('udp_port') %>
<% end %>
<% if scope.lookupvar('tcp_enable') == true %>
*.* @@<%= scope.lookupvar('syslogserver') %>:<%= scope.lookupvar('tcp_port') %>
<% end %>
<% end %>